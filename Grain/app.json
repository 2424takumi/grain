{
  "expo": {
    "name": "Grain",
    "slug": "Grain",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.grain.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Grainは毎日の写真を撮影するためにカメラへのアクセスが必要です。",
        "NSPhotoLibraryUsageDescription": "Grainは写真をエクスポートするためにフォトライブラリへのアクセスが必要です。"
      }
    },
    "android": {
      "package": "com.grain.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "expo-camera",
        {
          "cameraPermission": "Grainは毎日の写真を撮影するためにカメラへのアクセスが必要です。"
        }
      ]
    ],
    "scheme": "grain"
  }
}
